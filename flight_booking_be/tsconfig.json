{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2020"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "strict": false
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"]
}
